{
  "compilerOptions": {
    // "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "dist/",
    "node_modules/"
  ]
}