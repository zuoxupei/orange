{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "object-literal-sort-keys": false,
        "semicolon": true,
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "./bin/*"
        ]
    }
}